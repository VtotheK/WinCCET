<Window x:Class="ErrorTracker.ImageDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErrorTracker"
        mc:Ignorable="d"
        Title="ImageDebugWindow" MaxHeight="610" MaxWidth="610">
    <Grid>
        <TextBlock Name="TitleText" Height="50" Width="350" FontSize="18" Margin="0 10 0 0" VerticalAlignment="Top" TextAlignment="Center" FontWeight="Bold">SECTOR PREVIEW</TextBlock>
        <Image Name="DebugImage"></Image>
        <Button MaxHeight="40" FontSize="20" FontWeight="Bold" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 0 0 10" Width="100" Click="Close_Window_Click">Close</Button>
    </Grid>
</Window>
